<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primaryDark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:windowBackground">@drawable/splas_start_bg</item>
        <item name="otpViewStyle">@style/OtpWidget.OtpView</item>
        <item name="android:forceDarkAllowed">false</item>
    </style>
    <style name="CircleCorner">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
    <style name="CircleImageStyle">
        <item name="android:padding">1dp</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/primaryDark</item>
    </style>
    <style name="CircleCorner20">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">20%</item>
    </style>
    <style name="Corner20">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">20dp</item>
    </style>
    <style name="CircleCorner10">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10dp</item>
    </style>
    <style name="ShapeAppearanceOverlay.TopCornerOnly">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">30dp</item>
        <item name="cornerSizeTopRight">30dp</item>
    </style>
    <style name="Top20">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">20dp</item>
        <item name="cornerSizeTopRight">20dp</item>
    </style>
    <style name="Top5">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">5dp</item>
        <item name="cornerSizeTopRight">5dp</item>
    </style>
    <style name="TopRight15">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">15dp</item>
    </style>
    <style name="TopLeft15">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">15dp</item>
    </style>
    <style name="ShapeAppearanceOverlay.BottomCorner">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeBottomLeft">30dp</item>
        <item name="cornerSizeBottomRight">30dp</item>
    </style>

    <style name="Widget.BottomSheet.Shape" parent="Widget.MaterialComponents.BottomSheet">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.TopCornerOnly</item>
    </style>
    <style name="dividerBig">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">8dp</item>
        <item name="android:background">@color/page_bg</item>
    </style>

    <style name="BottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/bottomSheetStyleWrapper</item>
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">100%</item>
    </style>

    <style name="BottomSheet" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/bottomSheetStyleWrapper</item>
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
    </style>

    <style name="bottomSheetStyleWrapper" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="divider">
        <item name="android:layout_height">0.5dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/extraLightGray</item>
    </style>

    <style name="toolBarBack">
        <item name="android:layout_width">wrap_content</item>
        <item name="tint">@color/black</item>
        <item name="android:src">@drawable/ic_left_arrow</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:paddingStart">0dp</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="toolBarText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:textColor">@color/blacktextColor</item>
        <item name="android:textSize">@dimen/size24</item>
        <item name="layout_constraintHorizontal_bias">0.08</item>
    </style>



    <array name="rainbow">
        <item>@color/place1</item>
        <item>@color/place2</item>
        <item>@color/place3</item>
        <item>@color/place4</item>
        <item>@color/place5</item>
        <item>@color/place6</item>
        <item>@color/place7</item>
        <item>@color/place8</item>
        <item>@color/place9</item>
        <item>@color/place10</item>
    </array>

    <array name="text_post_bg">
        <item>@drawable/grad1</item>
        <item>@drawable/grad2</item>
        <item>@drawable/grad3</item>
        <item>@drawable/grad4</item>
        <item>@drawable/grad5</item>
        <item>@drawable/grad6</item>
        <item>@drawable/grad7</item>
        <item>@drawable/grad8</item>
        <item>@drawable/grad9</item>
    </array>

    <style name="headerXXL">
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:textColor">@color/blacktextColor</item>
        <item name="android:textSize">@dimen/size40</item>
        <item name="android:maxLines">3</item>
        <item name="android:ellipsize">end</item>
    </style>
    <style name="headerL">
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:textColor">@color/blacktextColor</item>
        <item name="android:textSize">@dimen/size18</item>
        <item name="android:maxLines">3</item>
        <item name="android:ellipsize">end</item>
    </style>
    <style name="header">
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:textColor">@color/blacktextColor</item>
        <item name="android:textSize">@dimen/size14</item>
        <item name="android:maxLines">3</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="dateText" >
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:background">@drawable/bg_shimmer_curve</item>
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="android:paddingStart">@dimen/size20</item>
        <item name="android:paddingEnd">@dimen/size20</item>
        <item name="android:layout_marginTop">@dimen/size15</item>
        <item name="android:layout_marginBottom">@dimen/size10</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">#8E8C8C</item>
        <item name="android:text">Today</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
    </style>

    <style name="subHeaderSmall">
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textColor">@color/darkerGray</item>
        <item name="android:textSize">@dimen/size12</item>
        <item name="android:ellipsize">end</item>
    </style>
    <style name="subHeaderVerySmall">
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">@dimen/size10</item>
        <item name="android:ellipsize">end</item>
    </style>
    <style name="subHeader">
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textColor">@color/blacktextColor</item>
        <item name="android:textSize">@dimen/size14</item>
    </style>

    <style name="editTextStyle">
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textColor">@color/blacktextColor</item>
        <item name="android:textSize">@dimen/size12</item>
        <item name="android:singleLine">true</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:inputType">text</item>
    </style>


    <style name="primaryButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/bg_button</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:paddingLeft">30dp</item>
        <item name="android:paddingRight">30dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">@color/blacktextColor</item>
    </style>
    <style name="ExoMediaButton.Previous">
        <item name="android:visibility">gone</item>
    </style>
    <style name="ExoMediaButton.Next">
        <item name="android:visibility">gone</item>
    </style>
    <style name="smallBadge">
        <item name="android:layout_height">24dp</item>
        <item name="android:layout_width">24dp</item>
        <item name="android:src">@drawable/badge_bronze</item>
        <item name="android:layout_gravity">bottom|end</item>
        <item name="layout_constraintVertical_bias">1</item>
        <item name="layout_constraintHorizontal_bias">1</item>
    </style>

    <style name="tab_text" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:fontFamily">@font/poppins_bold</item>
    </style>


    <style name="spinnerItemStyle" parent="android:Widget.TextView.SpinnerItem">
        <item name="android:fontFamily">@font/poppins</item>
    </style>
    <style name="spinnerDropDownItemStyle" parent="android:TextAppearance.Widget.TextView.SpinnerItem">

    </style>


