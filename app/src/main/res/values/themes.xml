<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
<!--    <style name="Theme.Shisheo" parent="Theme.AppCompat.Light.DarkActionBar">-->
    <style name="Theme.Shisheo" parent="AppTheme">
        <!-- Customize your theme here. -->

        <!--<item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:fitsSystemWindows">true</item>-->

    </style>

    <!--<style name="Theme.Shisheo.Launcher">
        <item name="android:windowBackground">@drawable/splas_start_bg</item>
    </style>-->


    <style name="home_tab_text" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:textSize">@dimen/size10</item>
        <item name="android:textColor">@color/blacktextColor</item>
    </style>
    <style name="main_tab_text" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@color/blacktextColor</item>
    </style>

    <style name="EditText">
        <item name="android:singleLine">true</item>
        <item name="colorControlNormal">#FFFFFF</item>
        <item name="colorControlActivated">#FFFFFF</item>
        <item name="android:textColorPrimary">#FFFFFF</item>
        <item name="android:textSize">14sp</item>

    </style>

    <style name="button_blue" parent="TextAppearance.AppCompat.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/blue_button_background</item>
    </style>

    <style name="normal_text" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">#633677</item>
        <item name="colorControlActivated">#FFC107</item>
    </style>

    <style name="CustomBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
    </style>

    <style name="CustomBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="description_text" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/size10</item>
        <item name="fontFamily">@font/poppins</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="SpinnerTheme" parent="android:Widget.Spinner">
        <item name="android:background">@drawable/gray_button_background</item>
        <item name="android:textColor">@color/primaryDark</item>
    </style>

    <style name="MyAnimation.Window" parent="@android:style/Animation.Activity">
        <item name="android:windowEnterAnimation">@anim/slide_bottom</item>
        <item name="android:windowExitAnimation">@anim/abc_slide_out_to</item>
    </style>

    <style name="TransparentDilaog" parent="Theme.Shisheo">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowAnimationStyle">@style/MyAnimation.Window</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:background">@android:color/transparent</item>
    </style>


    <style name="placeReviewRatingBar" parent="@android:style/Widget.RatingBar">
<!--        <item name="android:progressDrawable">@drawable/ratingbar_custom</item>-->
        <item name="android:minHeight">23dip</item>
        <item name="android:maxHeight">25dip</item>
    </style>

    <style name="FacebookLoginButton">
        <item name="android:textSize">15dp</item>
        <item name="android:background">@drawable/ic_post_image</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

</resources>