<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/root"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tv_interest_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingVertical="@dimen/size3"
        android:paddingHorizontal="@dimen/size25"
        android:layout_marginTop="@dimen/size4"
        android:layout_marginHorizontal="@dimen/size3"
        android:text="Trling ðŸŽ®"
        android:textSize="@dimen/size14"
        android:fontFamily="@font/poppins_semibold"
        android:singleLine="true"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="@color/blacktextColor"
        app:layout_constraintTop_toTopOf="parent"

        />

    <ImageView
        android:id="@+id/cross"
        android:layout_width="@dimen/size20"
        android:layout_height="@dimen/size20"
        android:src="@drawable/ic_cancel"
        app:layout_constraintEnd_toEndOf="@+id/tv_interest_item"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_centerVertical="true"
        app:tint="@color/white" />




</androidx.constraintlayout.widget.ConstraintLayout>