<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_other"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/llotherbg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_dm_others"
        android:orientation="vertical"
        android:padding="@dimen/size5">

        <TextView
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Imran Khan"
            android:visibility="gone"
            tools:visibility="visible"
            android:textSize="@dimen/size14"
            android:fontFamily="@font/poppins_semibold"
            android:textColor="@color/blacktextColor"
            android:paddingHorizontal="@dimen/size10"
            android:layout_marginBottom="-6dp"
            android:layout_marginTop="-4dp"/>

        <LinearLayout
            android:id="@+id/otherParentRoot"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="@dimen/size10"
            android:paddingTop="@dimen/size10">

            <ImageView
                android:id="@+id/oline"
                android:layout_width="5dp"
                android:layout_height="match_parent"
                android:src="@drawable/bg_dm_own"
                app:tint="@color/white" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/otherParentUser"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:ellipsize="end"
                    android:fontFamily="@font/poppins_semibold"
                    android:paddingHorizontal="@dimen/size10"
                    android:singleLine="true"
                    android:textColor="@color/white"
                    tools:text="Tula_grand" />

                <TextView
                    android:id="@+id/otherParentBody"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:fontFamily="@font/poppins"
                    android:maxLines="1"
                    android:paddingHorizontal="@dimen/size10"
                    android:textColor="@color/white"
                    tools:text="Lorem . " />
            </LinearLayout>


        </LinearLayout>


        <androidx.cardview.widget.CardView
            android:id="@+id/otherImageCard"
            android:layout_width="@dimen/size200"
            android:layout_height="100dp"
            android:visibility="gone"
            app:cardCornerRadius="@dimen/size15"
            app:cardElevation="0dp"
            tools:visibility="gone">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <ImageView
                    android:id="@+id/otherImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="true"
                    android:alpha="0.7"
                    android:background="#cccccc"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_meme" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size50"
                    android:layout_alignParentBottom="true"
                    android:src="@drawable/bg_primary_gradient" />

                <TextView
                    android:id="@+id/otherVoted"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="@dimen/size3"
                    android:layout_marginTop="@dimen/size3"
                    android:layout_marginEnd="@dimen/size3"
                    android:layout_marginBottom="@dimen/size3"
                    android:fontFamily="@font/poppins_bold"
                    android:paddingHorizontal="@dimen/size10"
                    android:paddingVertical="@dimen/size2"
                    android:text="voted"
                    android:textColor="@color/dark_transparent"
                    android:textSize="@dimen/size12" />

                <TextView
                    android:id="@+id/otherPlaceName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:fontFamily="@font/poppins_semibold"
                    android:paddingHorizontal="@dimen/size10"
                    android:paddingBottom="@dimen/size5"
                    android:textColor="@color/white"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:textSize="@dimen/size12"
                    tools:text="Shisheo Louge" />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/others"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:textColor="@color/white"
            android:paddingHorizontal="@dimen/size10"
            android:text="lorum_ipsum"
            android:textSize="@dimen/size14" />


    </androidx.appcompat.widget.LinearLayoutCompat>

    <TextView
        android:id="@+id/otherTime"
        style="@style/subHeader"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginStart="@dimen/size15"
        android:text="1233333"
        android:textSize="@dimen/size8" />
</LinearLayout>