<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="80dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginRight="@dimen/size5"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/backColor"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginBottom="@dimen/size30"
        android:src="@drawable/bg_more_intrest"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        >

    </de.hdodenhof.circleimageview.CircleImageView>

    <ImageView
        android:id="@+id/icon"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:src="@drawable/ic_app_icon"
        app:layout_constraintVertical_bias="0.19"
        app:layout_constraintStart_toStartOf="@+id/backColor"
        app:layout_constraintEnd_toEndOf="@+id/backColor"
        app:layout_constraintTop_toTopOf="@+id/backColor"
        app:layout_constraintBottom_toBottomOf="@+id/backColor"/>

    <TextView
        android:id="@+id/tvInterest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="All"
        android:gravity="center"
        android:layout_marginHorizontal="@dimen/size15"
        android:singleLine="true"
        app:layout_constraintVertical_bias="0.1"
        android:textColor="@color/blacktextColor"
        android:fontFamily="@font/poppins"
        android:textSize="@dimen/size10"
        app:layout_constraintTop_toBottomOf="@+id/icon"
        app:layout_constraintBottom_toBottomOf="@+id/backColor"/>


</androidx.constraintlayout.widget.ConstraintLayout>