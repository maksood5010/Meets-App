<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/shape_round_search">

    <TextView
        android:id="@+id/heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Feeds"
        android:textSize="@dimen/size20"
        android:textColor="@color/blacktextColor"
        android:fontFamily="@font/poppins_bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose feed to display"
        android:fontFamily="@font/poppins"
        android:textColor="@color/primaryDark"
        app:layout_constraintTop_toBottomOf="@+id/heading"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size20"
        android:showDividers="middle"
        android:divider="@color/gray"
        android:dividerPadding="@dimen/size3"
        android:paddingBottom="@dimen/size20"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/desc">

        <LinearLayout
            android:id="@+id/ll_global"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/size20"
            android:paddingVertical="@dimen/size10"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/size26"
                android:layout_height="@dimen/size26"
                android:tint="@color/blacktextColor"
                android:src="@drawable/ic_globle_feed"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/size10"
                android:text="Global feeds"
                android:textSize="@dimen/size14"
                android:textColor="@color/blacktextColor"
                android:fontFamily="@font/poppins_semibold"/>

        </LinearLayout>
       <!-- <View
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:background="#CECECE"/>-->
        <LinearLayout
            android:id="@+id/ll_timeline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/size20"
            android:paddingVertical="@dimen/size10"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/size26"
                android:layout_height="@dimen/size26"
                android:src="@drawable/ic_timeline"
                app:tint="@color/blacktextColor" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/size10"
                android:text="Timeline feeds"
                android:textSize="@dimen/size14"
                android:textColor="@color/blacktextColor"
                android:fontFamily="@font/poppins_semibold"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_openMeet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/size20"
            android:paddingVertical="@dimen/size10"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/size26"
                android:layout_height="@dimen/size26"
                android:src="@drawable/ic_meet_up"
                app:tint="@color/blacktextColor" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/size10"
                android:text="Open meet ups"
                android:textSize="@dimen/size14"
                android:textColor="@color/blacktextColor"
                android:fontFamily="@font/poppins_semibold"/>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:background="#CECECE"/>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>