<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/rootCo"
    android:layout_marginHorizontal="@dimen/size20"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:cardElevation="0dp"
        app:cardCornerRadius="@dimen/size20">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="150dp">

                    <ImageView
                        android:id="@+id/image"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/temp_restaurant_detail" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:layout_alignParentBottom="true"
                        android:src="@drawable/bg_primary_gradient" />
                </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/lightestGray"
                android:paddingVertical="@dimen/size10"
                android:elevation="@dimen/size3"
                android:paddingBottom="@dimen/size10"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/card">
                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nine7seven Cafe"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:fontFamily="@font/poppins_semibold"
                    android:elevation="@dimen/size3"
                    android:textSize="@dimen/size16"
                    android:textColor="@color/blacktextColor"
                    android:paddingStart="@dimen/size10" />
                <TextView
                    android:id="@+id/category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Casual Dinning"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:elevation="@dimen/size3"
                    android:textSize="@dimen/size14"
                    android:textColor="@color/blacktextColor"
                    android:paddingStart="@dimen/size10" />

                <TextView
                    android:id="@+id/timing"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Open: 6:00pm - 2:00am"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:elevation="@dimen/size3"
                    android:textSize="@dimen/size14"
                    android:textColor="@color/blacktextColor"
                    android:paddingStart="@dimen/size10" />

                <TextView
                    android:id="@+id/address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sheikh Zayed road, Al Khaleed..."
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:elevation="@dimen/size3"
                    android:textSize="@dimen/size14"
                    android:textColor="@color/blacktextColor"
                    android:paddingStart="@dimen/size10" />

            </LinearLayout>


        </LinearLayout>
    </androidx.cardview.widget.CardView>



    <TextView
        android:id="@+id/romove"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Change"
        android:elevation="@dimen/size2"
        android:textSize="@dimen/size10"
        android:fontFamily="@font/poppins_semibold"
        android:textColor="@color/white"
        android:paddingVertical="@dimen/size3"
        android:paddingHorizontal="@dimen/size8"
        android:layout_margin="@dimen/size10"
        android:background="@drawable/bg_loading_dialog"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>




</androidx.constraintlayout.widget.ConstraintLayout>