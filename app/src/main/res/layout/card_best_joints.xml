<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginLeft="@dimen/size20"
    xmlns:app="http://schemas.android.com/apk/res-auto">



    <androidx.cardview.widget.CardView
        android:id="@+id/civ_image"
        android:layout_width="match_parent"
        android:layout_height="149dp"
        app:cardCornerRadius="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">


        <ImageView
            android:id="@+id/iv_bg_card"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"/>


    </androidx.cardview.widget.CardView>

    <!--<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:background="#66000000"
        android:elevation="5dp"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:gravity="bottom">


    </LinearLayout>-->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size10"
        app:layout_constraintTop_toBottomOf="@+id/civ_image"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            tools:text="Nineve"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="@dimen/size12"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/tv_rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            tools:text="5.0/5.0"
            android:paddingStart="@dimen/size5"
            android:textAllCaps="false"
            android:textColor="@color/gray"
            android:textSize="@dimen/size9"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <ImageView
            android:layout_width="@dimen/size20"
            android:layout_height="@dimen/size15"
            android:src="@drawable/ic_star"
            app:layout_constraintEnd_toStartOf="@id/tv_rate"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            tools:text="Open: 6:00pm - 2:00am"
            android:paddingStart="@dimen/size5"
            android:textAllCaps="false"
            android:textColor="@color/color_primary"
            android:textSize="@dimen/size12"
            app:layout_constraintTop_toBottomOf="@+id/tv_name"
           app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/tv_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            tools:text="Casual Dinning"
            android:paddingStart="@dimen/size5"
            android:textAllCaps="false"
            android:textColor="@color/gray"
            android:textSize="@dimen/size9"
            app:layout_constraintTop_toTopOf="@+id/tv_time"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>






</androidx.constraintlayout.widget.ConstraintLayout>