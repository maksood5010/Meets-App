<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:id="@+id/myRoot"
    android:background="@color/blue_color_picker"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tvCountry"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="India"
        android:singleLine="true"
        android:ellipsize="end"
        android:paddingVertical="@dimen/size10"
        android:textColor="@color/blacktextColor"
        android:textSize="@dimen/size16"
        android:gravity="center_horizontal"
        android:fontFamily="@font/poppins_medium"
        android:paddingHorizontal="@dimen/size20"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <LinearLayout
        android:id="@+id/seprator"
        android:layout_width="250dp"
        android:layout_height="0.5dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="#D8D4D4"
        app:layout_constraintTop_toBottomOf="@+id/tvCountry"/>



    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gdv50"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.5"
        android:orientation="vertical"/>


    <TextView
        android:id="@+id/tvCountOrg"
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:text="80"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="@dimen/size30"
        android:fontFamily="@font/poppins_bold"
        app:layout_constraintTop_toBottomOf="@+id/seprator"
        app:layout_constraintEnd_toStartOf="@+id/gdv50"
        android:layout_marginTop="@dimen/size15"/>

    <TextView
        android:id="@+id/views1"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:fontFamily="@font/poppins_medium"
        android:text="views"
        android:paddingHorizontal="@dimen/size5"
        android:gravity="center_vertical"
        android:textSize="@dimen/size14"
        app:layout_constraintStart_toEndOf="@+id/gdv50"
        android:layout_marginBottom="@dimen/size5"
        app:layout_constraintBottom_toBottomOf="@+id/tvCountOrg"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/desc1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Organic Views"
        android:textSize="@dimen/size12"
        android:fontFamily="@font/poppins"
        android:textColor="@color/gray"
        app:layout_constraintStart_toStartOf="@+id/tvCountOrg"
        app:layout_constraintEnd_toEndOf="@+id/views1"
        app:layout_constraintTop_toBottomOf="@+id/tvCountOrg"/>

    <TextView
        android:id="@+id/tvCountCharge"
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:text="80"
        android:gravity="center"
        android:textSize="@dimen/size30"
        android:textColor="@color/black"
        android:fontFamily="@font/poppins_bold"
        app:layout_constraintTop_toBottomOf="@+id/desc1"
        app:layout_constraintEnd_toStartOf="@+id/gdv50"
        android:layout_marginTop="@dimen/size25"/>

    <TextView
        android:id="@+id/views2"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:fontFamily="@font/poppins_medium"
        android:text="views"
        android:paddingHorizontal="@dimen/size5"
        android:gravity="center_vertical"
        android:textSize="@dimen/size14"
        app:layout_constraintStart_toEndOf="@+id/gdv50"
        android:layout_marginBottom="@dimen/size5"
        app:layout_constraintBottom_toBottomOf="@+id/tvCountCharge"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/desc2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Super charged Views"
        android:textSize="@dimen/size12"
        android:fontFamily="@font/poppins"
        app:layout_constraintTop_toBottomOf="@+id/tvCountCharge"
        android:textColor="@color/gray"
        app:layout_constraintStart_toStartOf="@id/gdv50"
        app:layout_constraintEnd_toEndOf="@+id/gdv50"
        />



    <TextView
        android:id="@+id/tvTotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total: 200"
        android:textSize="@dimen/size14"
        android:fontFamily="@font/poppins_semibold"
        android:textColor="@color/blacktextColor"
        android:layout_marginVertical="@dimen/size15"
        app:layout_constraintTop_toBottomOf="@+id/desc2"
        app:layout_constraintStart_toStartOf="@+id/desc2"
        app:layout_constraintEnd_toEndOf="@+id/desc2"
        app:layout_constraintBottom_toBottomOf="parent"/>






</androidx.constraintlayout.widget.ConstraintLayout>