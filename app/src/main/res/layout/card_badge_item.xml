<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/root"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/ivTrophy"
        android:layout_width="@dimen/size50"
        android:layout_height="@dimen/size50"
        android:padding="@dimen/size10"
        android:layout_marginVertical="@dimen/size5"
        android:src="@drawable/ic_trophy_dummy"
        style="@style/bronze"
        tools:src="@drawable/ic_trophy"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/size10"
        tools:text="Bronze Status holder"
        android:fontFamily="@font/poppins_medium"
        android:textSize="@dimen/size12"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ivTrophy"
        app:layout_constraintEnd_toStartOf="@+id/ivCheck"/>


    <ImageView
        android:id="@+id/ivCheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_unchecked"
        android:layout_margin="@dimen/size20"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>