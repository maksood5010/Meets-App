<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/motion_base"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splas_start_bg"
    tools:context=".ui.activities.SplashScreen"
    app:layoutDescription="@xml/activity_new_splash_screen_scene">

    <ImageView
        android:id="@+id/persontop"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/splash_top_person"
        app:layout_constraintBottom_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/personright"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:rotation="90"
        android:src="@drawable/splash_top_person"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="parent"/>

    <ImageView
        android:id="@+id/persondown"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/splash_top_person"
        app:layout_constraintTop_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/personleft"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/splash_top_person"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="parent"/>


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/centredesk"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/splash_chat"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>



    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins"
        android:text="@string/shisheomeets"
        android:textColor="@color/white"
        android:textSize="@dimen/size15"
        tools:layout_editor_absoluteX="134dp"
        tools:layout_editor_absoluteY="696dp" />


</androidx.constraintlayout.motion.widget.MotionLayout>