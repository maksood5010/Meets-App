<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:showIn="@layout/layout_bottom_profile">

    <TextView
        android:id="@+id/tv_credibility"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/size20"
        android:layout_marginTop="@dimen/size20"
        android:fontFamily="@font/poppins_bold"
        android:text="Meets Credibility"
        android:textColor="@color/black"
        android:textSize="@dimen/size14"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bar_interest" />

    <TextView
        android:id="@+id/cred_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/size20"
        android:text="Get noticed more by increasing your Meets Credibility "
        android:textColor="#9A9A9A"
        android:textSize="@dimen/size12"
        app:layout_constraintTop_toBottomOf="@+id/tv_credibility" />

    <TableLayout
        android:id="@+id/table"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/size15"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cred_desc">

        <TableRow>

            <androidx.cardview.widget.CardView
                android:id="@+id/cvBadge"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                app:cardCornerRadius="10dp"
                app:cardElevation="3dp"
                app:cardBackgroundColor="@color/transparent"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:id="@+id/llBadge"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/badge_level1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/ivBadge"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:padding="@dimen/size5"
                        android:src="@drawable/badge_bronze" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingVertical="@dimen/size10">

                        <TextView
                            android:id="@+id/tvCurrentBadge"
                            style="@style/header"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="-4dp"
                            android:ellipsize="end"
                            android:lineSpacingExtra="-4dp"
                            android:paddingStart="0dp"
                            android:paddingEnd="@dimen/size5"
                            android:textColor="@color/black"
                            android:textSize="@dimen/size9"
                            android:maxLines="2"
                            tools:text="Blue Diamond" />

                        <TextView
                            android:id="@+id/tvCurrentLevel"
                            style="@style/subHeader"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="-4dp"
                            android:textColor="@color/black"
                            android:textSize="7dp"
                            tools:text="level 08" />
                    </LinearLayout>

                    <!--<ImageView
                        android:id="@+id/iv_badge"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:src="@drawable/bronze_badge" />-->
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                app:cardBackgroundColor="@color/transparent"
                app:cardCornerRadius="10dp"
                app:cardElevation="3dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:id="@+id/llPositive"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/bg_postive_gray"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingVertical="@dimen/size5">

                        <ImageView
                            android:id="@+id/ivPositive"
                            android:layout_width="32dp"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:src="@drawable/thumb_gray" />

                        <TextView
                            android:id="@+id/tvPositive"
                            style="@style/header"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="marquee"
                            android:lineSpacingExtra="-8dp"
                            android:paddingHorizontal="@dimen/size5"
                            android:singleLine="true"
                            android:text="0 Positive Exp"
                            android:textColor="@color/black"
                            android:textSize="@dimen/size9" />
                    </LinearLayout>

                    <!--<ImageView
                        android:id="@+id/iv_badge"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:src="@drawable/bronze_badge" />-->
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                app:cardBackgroundColor="@color/transparent"
                app:cardCornerRadius="10dp"
                app:cardElevation="3dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:id="@+id/llMeetups"
                    android:background="@drawable/bg_postive_gray"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingVertical="@dimen/size5">

                        <ImageView
                            android:id="@+id/ivMeetup"
                            android:layout_width="38dp"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:src="@drawable/table" />

                        <TextView
                            android:id="@+id/tvMeetups"
                            style="@style/header"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="marquee"
                            android:lineSpacingExtra="-8dp"
                            android:paddingHorizontal="@dimen/size5"
                            android:singleLine="true"
                            android:text="0 Meetups"
                            android:textColor="@color/black"
                            android:textSize="@dimen/size9" />
                    </LinearLayout>

                    <!--<ImageView
                        android:id="@+id/iv_badge"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:src="@drawable/bronze_badge" />-->
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </TableRow>
    </TableLayout>
</merge>