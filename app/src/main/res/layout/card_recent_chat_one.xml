<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingTop="@dimen/size20"
    android:layout_marginStart="@dimen/size10"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/dp"
        android:layout_width="60dp"
        android:layout_height="60dp"
        tools:src="@drawable/demo_post_image"
        app:civ_border_color="@color/primaryDark"
        app:civ_border_width="@dimen/size2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/username"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="adeleadeleadeleadele"
        android:singleLine="true"
        android:ellipsize="end"
        android:textSize="@dimen/size12"
        android:fontFamily="@font/poppins"
        style="@style/header"
        app:layout_constraintTop_toBottomOf="@+id/dp"
        app:layout_constraintStart_toStartOf="@+id/dp"
        app:layout_constraintEnd_toEndOf="@+id/dp"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/status"
        android:layout_width="@dimen/size16"
        android:layout_height="@dimen/size16"
        app:civ_border_width="@dimen/size2"
        app:civ_border_color="@color/white"
        android:src="#03A564"
        app:layout_constraintTop_toTopOf="@+id/dp"
        app:layout_constraintBottom_toBottomOf="@+id/dp"
        app:layout_constraintStart_toStartOf="@+id/dp"
        app:layout_constraintEnd_toEndOf="@+id/dp"
        app:layout_constraintVertical_bias="0.95"
        app:layout_constraintHorizontal_bias="0.95"/>

</androidx.constraintlayout.widget.ConstraintLayout>