<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cv_main"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:background="@drawable/bg_shimmer_curve"
    android:backgroundTint="#EFEFEF">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/iv_dotted_line"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="-2dp"
                android:layerType="software"
                android:src="@drawable/dotted_line" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/civ_top_left"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="-10dp"
                android:layout_marginTop="-10dp"
                android:src="@android:color/white" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/civ_bottom_left"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="-10dp"
                android:layout_marginBottom="-10dp"
                android:src="@android:color/white" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/civ_top_right"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="-10dp"
                android:layout_marginEnd="-10dp"
                android:src="@android:color/white" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/civ_bottom_right"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="-10dp"
                android:layout_marginBottom="-10dp"
                android:src="@android:color/white" />

            <RelativeLayout
                android:id="@+id/rl_image"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_margin="10dp">

                <ImageView
                    android:id="@+id/iv_circle_bg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <TextView
                    android:id="@+id/tv_mint_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:fontFamily="@font/poppins_bold"
                    android:text="50"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/size30" />

                <TextView
                    android:id="@+id/tv_mints"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="5dp"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:fontFamily="@font/poppins_bold"
                    android:text="Mints"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/size12" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_toEndOf="@id/rl_image">

                <TextView
                    android:id="@+id/tv_mint_heading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:fontFamily="@font/poppins_bold"
                    android:maxLines="1"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    android:text="Attend Meetup"
                    android:textColor="@color/white"
                    android:textSize="@dimen/size12" />

                <TextView
                    android:id="@+id/tv_mint_sub_heading"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_mint_heading"
                    android:layout_marginTop="5dp"
                    android:ellipsize="end"
                    android:fontFamily="@font/poppins"
                    android:maxLines="3"
                    android:text="Use the “I am here” button to indicate that you have attended a meetup to mine 50mints. "
                    android:textColor="@color/blacktextColor"
                    android:textSize="@dimen/size10" />

            </RelativeLayout>

        </RelativeLayout>

    </FrameLayout>

</RelativeLayout>