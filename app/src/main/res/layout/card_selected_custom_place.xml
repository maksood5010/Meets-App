<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootCo"
    android:layout_width="125dp"
    android:layout_height="75dp"
    android:layout_marginStart="@dimen/size5"
    android:clipToPadding="false"
    android:elevation="@dimen/size10">


    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/size3"
        app:cardCornerRadius="@dimen/size12"
        app:cardElevation="0dp"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_custom_place_bg"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_alignParentBottom="true"
                android:src="@color/primaryDark" />

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/address"
                android:layout_marginBottom="2dp"
                android:ellipsize="end"
                android:fontFamily="@font/poppins_bold"
                android:gravity="center"
                android:maxLines="1"
                android:paddingHorizontal="@dimen/size5"
                android:textColor="@color/white"
                android:textSize="@dimen/size10"
                tools:text="Kalifa Tower" />

            <TextView
                android:id="@+id/address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/size5"
                android:layout_alignParentBottom="true"
                tools:text="Address"
                android:singleLine="true"
                android:ellipsize="end"
                android:fontFamily="@font/poppins"
                android:textSize="@dimen/size10"
                android:textColor="@color/page_bg"/>






        </RelativeLayout>

    </androidx.cardview.widget.CardView>




